<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="CANShark.Desktop.Views.Modal.SetupMenuView">

  <Grid Classes="Modal">
    <Border Classes="ModalBackground" />
    <Border Classes="ModalContent"
            Width="300"
            HorizontalAlignment="Right"
            CornerRadius="0">
      <Grid RowDefinitions="*, Auto">
        <TextBlock Text="CANShark"
                   FontWeight="Bold"
                   FontSize="26"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
        <Button Grid.Row="1"
                Content="OK" Margin="10"
                Width="70"
                Command="{Binding $parent[Window].DataContext.CloseModal}"/>
      </Grid>
    </Border>
  </Grid>

</UserControl>
