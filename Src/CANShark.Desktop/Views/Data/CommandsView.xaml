<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="CANShark.Desktop.Views.Data.CommandsView">

  <Grid RowDefinitions="Auto, *" ZIndex="0">
    <Border Grid.Row="0" Margin="5, 10">
      <Grid ColumnDefinitions="*, 35">
        <TextBox Classes="CommandSearchBox" Watermark="Search" Grid.Column="0"/>
        <Button Classes="BurgerButton"
                Grid.Column="1"
                FontWeight="Bold"
                Command="{Binding $parent[Window].DataContext.ShowSetupMenuModal}">
          <DrawingPresenter Width="24" Height="24" Drawing="{DynamicResource VSCodeLight.settings}" />
        </Button>
      </Grid>
    </Border>
    <ListBox Grid.Row="1" Classes="CommandList">
      <ListBoxItem Content="DDDDDDD"/>
      <ListBoxItem Content="DDDDDDD"/>
      <ListBoxItem Content="DDDDDDD"/>
      <ListBoxItem Content="DDDDDDD"/>
    </ListBox>
  </Grid>

</UserControl>
